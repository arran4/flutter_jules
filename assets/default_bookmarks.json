[
  {
    "name": "Empty View",
    "description": "The standard view, sorted by last update.",
    "expression": "",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Pending",
    "description": "Sessions queued for creation or with pending messages.",
    "expression": "Pending()",
    "sorts": [
      {
        "field": "created",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Needs Attention",
    "description": "Sessions that are new, updated, or awaiting approval.",
    "expression": "OR(New() Updated() State(AWAITING_PLAN_APPROVAL))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "In Progress",
    "description": "All sessions currently in progress.",
    "expression": "State(IN_PROGRESS)",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Pending Sessions",
    "description": "Sessions queued and waiting to be sent to server.",
    "expression": "State(QUEUED)",
    "sorts": [
      {
        "field": "created",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Draft Messages",
    "description": "Sessions with unsent draft messages.",
    "expression": "Has(Drafts)",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Completed & Updated",
    "description": "Recently updated and completed sessions.",
    "expression": "AND(State(COMPLETED) Updated())",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "My Watched Items",
    "description": "Sessions you are actively watching.",
    "expression": "Watching()",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Open PRs",
    "description": "Sessions with open pull requests.",
    "expression": "PR(Open)",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Merged PRs",
    "description": "Sessions with merged pull requests.",
    "expression": "PR(Merged)",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Completed w/ PR (Unread/Updated)",
    "description": "Completed sessions with PRs that are unread or recently updated.",
    "expression": "AND(State(COMPLETED) Has(PR) OR(Unread() Updated()) NOT(OR(PR(Merged) PR(closed))))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Completed w/o PR (Unread/Updated)",
    "description": "Completed sessions without PRs that are unread or recently updated.",
    "expression": "AND(State(COMPLETED) NOT(Has(PR)) OR(Unread() Updated()))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Completed PRs (Open/Draft)",
    "description": "Completed sessions with open or draft pull requests.",
    "expression": "AND(OR(PR(open) PR(draft)) State(COMPLETED))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Review Queue",
    "description": "Sessions that are completed, awaiting feedback/approval, or have open/draft PRs.",
    "expression": "AND(OR(State(COMPLETED) State(AWAITING_USER_FEEDBACK) State(AWAITING_PLAN_APPROVAL)) OR(PR(Draft) PR(open)))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "Active CI Failures",
    "description": "Open PRs with failed CI checks.",
    "expression": "AND(CI(Failure) PR(Open))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  },
  {
    "name": "CI Passing (Open)",
    "description": "Open PRs with passing CI checks.",
    "expression": "AND(CI(Success) PR(Open))",
    "sorts": [
      {
        "field": "updated",
        "direction": "descending"
      }
    ]
  }
]
